<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_heading">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="bg_heading">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="bg_heading.margins">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="table_text">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="table_title_text" parent="table_text">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="film_sub_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#99000000</item>
    </style>

    <style name="film_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColor">#CC000000</item>
    </style>


</resources>